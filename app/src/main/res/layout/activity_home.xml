<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:onClick="launchFlow"
    android:animateLayoutChanges="true"
    android:hardwareAccelerated="false"
    android:id="@+id/background">


    <VideoView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background_video"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150pt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topButton"
            android:src="@drawable/top_flow"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shootButton"
            android:src="@drawable/shoot_video"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/launchFlowButton"
            android:src="@drawable/logo_flow"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:longClickable="false"
            android:nestedScrollingEnabled="false"
            android:maxWidth="180dp"
            android:maxHeight="180dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbButton"
        android:src="@drawable/fb_icon"
        android:maxHeight="10pt"
        android:maxWidth="10pt"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginRight="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/background_video"
        android:layout_alignEnd="@+id/background_video"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitterButton"
        android:src="@drawable/twitter_icon"
        android:maxHeight="10pt"
        android:maxWidth="10pt"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignBottom="@+id/fbButton"
        android:layout_alignRight="@+id/background_video"
        android:layout_alignEnd="@+id/background_video"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

</RelativeLayout>
